<Page
    x:Class="PolisHUB.Visualization.AccountSetttings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <StackPanel Orientation = "Vertical" Background = "#222222">

        <!--#region CommandBar-->

        <CommandBar Background = "#E4B319" DefaultLabelPosition = "Right">

            <CommandBar.Content>
                <StackPanel Orientation = "Horizontal">
                    <AppBarButton x:Name = "BackButton" Click = "BackButton_Click" Icon = "Back" Foreground="Black"/>
                    <TextBlock Text = "PolisHub" FontWeight="Bold" Foreground = "Black" Margin = "16,8" FontSize = "24"/>
                </StackPanel>
            </CommandBar.Content>

            <CommandBar.PrimaryCommands>

                <AppBarButton x:Name = "UserAppBar" Icon = "Contact"/>
                <AppBarButton Icon = "Setting"/>

            </CommandBar.PrimaryCommands>

        </CommandBar>
        <!--#endregion-->
        
    </StackPanel>
</Page>
